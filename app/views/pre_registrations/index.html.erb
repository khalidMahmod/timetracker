<%= stylesheet_link_tag 'pre_registrations', :media => 'all', 'data-turbolinks-track' => true %>
<h3><b>Employee Onboarding</b></h3><br/>
<table style="width:100%">
    <tr>
        <th style="border-left: 1px solid #808080;">Name</th>
        <th>Email ID</th>
        <th style="border-right: 1px solid #808080;" colspan="2">Contact Number</th>
    </tr>
    <% last_date = ''%>
    <% if @onboarding_employees.empty? %>
        <tr>
            <td style="border-left: 1px solid #808080; border-right: 1px solid #808080;", colspan="6" class = "text-center" >No Record</td>
        </tr>
    <% end %>
    <% @onboarding_employees.each do |employee| %>
        <tr>
            <td style="border-left: 1px solid #808080;"><%= employee.name %></td>
            <td><%= employee.personalEmail %></td>
            <td><%= employee.contactNumber %></td>
            <td style="border-right: 1px solid #808080;"><%= link_to 'Edit', pre_registration_path(employee) %></td>
        </tr>
    <% end %>
</table>
